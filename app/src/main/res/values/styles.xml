<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema utama aplikasi -->
    <style name="Theme.LabaLabaSunda" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Warna utama aplikasi -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Warna latar belakang -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Warna teks untuk input dan hint -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <!-- Warna border & underline TextInput -->
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>

        <!-- Gunakan Material3 typography -->
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyMedium</item>
    </style>
</resources>
